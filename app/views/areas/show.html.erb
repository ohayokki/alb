<% title = @area.name %>
<%= render "layouts/header", title: title%>

<div class="container-xxl">
  <div class="bread-column">
    <%= link_to "アルバ", root_path %>
    &emsp;-&emsp;
    <%= link_to t("prefectures.#{@area.prefecture.name}"), prefectures_path(@area.prefecture.name) %>
    &emsp;-&emsp;
    <%= link_to t("districts.#{@area.district.name}"), districts_path(@area.district.name) %>
    &emsp;-&emsp;
    <%= title %>
  </div>

  <% if @areas.any? %>
    <h2><%= @area.district.display_name %>の他エリア</h2>
    <div class="row area-links">
      <%= render @areas %>
    </div>
  <% end %>

  <h2><%= title %>のバー</h2>
  <%= render "shops/near_serch", url:  area_path(@area) %>
  <%= render @shops %>

  <% if @genres.any? %>
    <div class="genre">
      <h2><%= title %>ジャンル別</h2>
      <div class="row">
        <% @genres.each do |genre| %>
          <div class="col-sm-4 mb-3">
            <div class="card">
              <% if false%>
                <img src="..." class="card-img-top" alt="...">
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to genre.name, genre_area_path(genre.rubi, @area.id) %></h5>
                <p class="card-text"><%= genre.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
