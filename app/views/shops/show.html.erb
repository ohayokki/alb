<% title = @shop.prefecture.display_name %>
<%= render "layouts/header", title: title %>

<div class="container-xxl">
  <div class="bread-column">
    <%= link_to "アルバ", root_path %>
    &emsp;-&emsp;
    <%= link_to @shop.prefecture.display_name, prefectures_path(@shop.prefecture.name) %>
    &emsp;-&emsp;
    <%= link_to @shop.district.display_name, districts_path(@shop.district.name) %>
    &emsp;-&emsp;
    <%= link_to @shop.area.name, area_path(@shop.area) %>
    &emsp;-&emsp;
    <%= @shop.name %>
  </div>

  <div class="shop_detail">
    <div class="text-center mb-3">
      <%= image_tag @shop.image1.to_s %>
    </div>
    <div class="row mb-3">
      <div class="col-sm-7">
        <h2><%= @shop.name %></h2>
      </div>
      <div class="col-sm-5 text-end">
        <h2><%= @shop.tel %><br><%= @shop.area.name %></h2>
      </div>
    </div>
    <div class="shop-genre-name <%= @shop.genre.rubi %> w-50 text-center mb-3">
      <%= @shop.genre.name %>
    </div>

    <div class="icon-space">
      <%= render "calendar" %>

      <img src="/icons/alc.svg" alt="お酒アイコン" class="icon">
      <% if @shop.alcohol %>
        お酒有
      <% else %>
        お酒無
      <% end %>
      <% if @shop.smoking %>
        <img src="/icons/smoking.png" alt="喫煙OKアイコン" class="icon">喫煙OK
      <% else %>
        <img src="/icons/smoking-ng.png" alt="喫煙NGアイコン" class="icon">店内禁煙
      <% end %>
      <% if @shop.wifi %>
        <img src="/icons/wifi.svg" alt="wifiアイコン" class="icon"><%= "Wifi有" %>
      <% end %>

      <%if @shop.reservation %> |
        <img src="/icons/yoyaku.svg" alt="予約OKアイコン" class="icon">予約OK
      <% end %>

      <% if @shop.english %>
        <img src="/icons/en.png" alt="英語対応OKアイコン" class="icon">英語対応可
      <% end %>

      <% if @shop.korean %>
        <img src="/icons/kor.png" alt="韓国語対応OKアイコン" class="icon">韓国語対応可
      <% end %>

      <%= "クレジットカード可" if @shop.card_payment %> |
      <%= "スマホ決済可" if @shop.mobile_payment %> |
      <% if @shop.googlemap %>
        <div class="map mt-5">
          <%= @shop.googlemap.html_safe if @shop.googlemap %>|
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="shop-description">
  <div class="container-xxl">
    <h3><%= @shop.title %></h3>
    <p><%= @shop.introduction %></p>
  </div>
</div>

      <%= @shop.coupon if @shop.coupon %> |

<div class="container-xxl">
  <div class="shop_basic_information mt-5">
    <h2><%= @shop.name %>の店舗情報</h2>
    <div class="row">
      <div class="col-3">
        店名
      </div>
      <div class="col-9">
        <%= @shop.name %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        TEL
      </div>
      <div class="col-9">
        <%= @shop.tel %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        住所
      </div>
      <div class="col-9">
        <%= @shop.address %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        アクセス
      </div>
      <div class="col-9">
        <%= @shop.access %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        営業時間
      </div>
      <div class="col-9">
        <%= @shop.hours %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        定休日
      </div>
      <div class="col-9">
        <%= @shop.holiday %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        平均予算
      </div>
      <div class="col-9">
        <%= @shop.budget %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        ホームページ
      </div>
      <div class="col-9">
        <%= @shop.website %>
      </div>
    </div>
  </div>
</div>
