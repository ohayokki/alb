<div class="row mb-5">
  <div class="col-3">
    <% if shop.shop_logo.present? %>
      <%= image_tag shop.shop_logo.to_s, class: "img-fluid w-100" %>
    <% else %>
      <img src="/no-image.png" class="img-fluid w-100">
    <% end %>
    <% if shop.distance.present? %>
      <div class="shop_distance text cente mt-1">距離:<%= shop.distance.round(2) %> km</div>
    <% end %>
  </div>
  <div class="col">
    <div class="shop-tag">

      <span class="shop_area_name"><%= shop.area.name %></span>
      <span class="shop_genre_name <%= shop.genre.rubi %>"><%= shop.genre.name %></span>
    </div>
    <h3><%#= link_to shop.name, shop_path(shop) %><%= shop.name %></h3>
    <%= shop.title %>
    <hr>
    <% if shop.hours.present? %>
      <div>営業時間:&emsp;<%= shop.hours %></div>
    <% end %>
    <% if shop.budget.present? %>
      <div>予算:&emsp;<%= shop.budget %></div>
    <% end %>
    <% if shop.access.present? %>
      <div>アクセス:&emsp;<%= shop.access %></div>
    <% end %>
  </div>
</div>
