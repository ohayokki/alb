<div class="col-6 col-md-4 col-lg-3 text-center mb-2 mt-4">
  <% if staff.image.present? %>
    <%= image_tag(staff.image.url(:square), alt: staff.name + "の画像", class: "img-fluid rounded-circle") %>
  <% else %>
    <img src="/images/no-image300.png" alt="スタッフ画像" class="img-fluid rounded-circle">
  <% end %>
  <h3><%= link_to staff.name, staff_path(staff) %></h3>
</div>
