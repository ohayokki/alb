<div class="container-xxl mt-5 mb-5">
  <h1>店舗休日管理</h1>



<%= form_with(model: @holiday, url: admin_shop_holidays_path) do |form| %>
  <div class="field">
    <%= form.label :day_of_week, 'Day of the Week (for recurring holidays)' %>
    <%= form.select :day_of_week, options_for_select([
      ['Sunday', 0],
      ['Monday', 1],
      ['Tuesday', 2],
      ['Wednesday', 3],
      ['Thursday', 4],
      ['Friday', 5],
      ['Saturday', 6]
    ], @holiday.day_of_week), include_blank: true %>
  </div>




    <%= form.submit 'Save Holiday' %>
<% end %>




<%= form_with(model: @holiday, url: admin_shop_holidays_path) do |form| %>
  <div class="field">
    <%= form.label :shop_id, 'Shop' %>
    <%= form.collection_select :shop_id, Shop.all, :id, :name, prompt: 'Select a Shop' %>
  </div>

  <div class="field">
    <%= form.label :day_of_week, 'Day of the Week (for recurring holidays)' %>
    <%= form.select :day_of_week, options_for_select([
      ['Sunday', 0],
      ['Monday', 1],
      ['Tuesday', 2],
      ['Wednesday', 3],
      ['Thursday', 4],
      ['Friday', 5],
      ['Saturday', 6]
    ], @holiday.day_of_week), include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :date, 'Date (for exception or temporary holidays)' %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :status, 'Status' %>
    <%= form.select :status, [['Open', 0], ['Closed', 1]] %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Holiday' %>
  </div>
<% end %>









  <%= form_with model: @holiday, url: admin_shop_holidays_path do |form| %>
    <% if @holiday.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@holiday.errors.count, t('errors.count')) %> <%= t('errors.prohibited') %>:</h2>
        <ul>
          <% @holiday.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :hours %>
      <%= form.text_area :hours, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :holiday %>
      <%= form.text_area :holiday, class: "form-control" %>
    </div>
    <%= form.submit t('helpers.submit.create'), class: "btn btn-user w-100" %>
    
  <% end %>



  <p class="mt-5">営業時間と店休日の説明がある場合は以下を編集してください。</p>
  <%= form_with model: @shop, url: admin_shop_shop_path(@shop), local: true do |form| %>
    <% if @shop.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@shop.errors.count, t('errors.count')) %> <%= t('errors.prohibited') %>:</h2>
        <ul>
          <% @shop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <p>定休日にチェックを入れてください</p>
      <% ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'].each_with_index do |day, index| %>
        <%= check_box_tag 'shop[weekly_holidays][]', index, @shop.weekly_holidays.include?(index) %>
        <%= label_tag "shop_holidays_#{index}", day %>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :hours %>
      <%= form.text_area :hours, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :holiday %>
      <%= form.text_area :holiday, class: "form-control" %>
    </div>
    <%= form.submit t('helpers.submit.create'), class: "btn btn-user w-100" %>
  <% end %>

  <%= @shop.inspect %>
</div>
