        <% end %>
      </div>
    </div>

      <div class="mb-3">
        <%= form.label :tel %>
        <%= form.text_field :tel, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :address %>
        <%= form.text_field :address, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :access %>
        <%= form.text_area :access, class: "form-control" %>
      </div>

      <div class="mb-3">
