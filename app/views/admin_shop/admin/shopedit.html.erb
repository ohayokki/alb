<div class="container-xxl mt-5 mb-5">
  <%= render "layouts/flash" %>
  <h1><%= @shop.name %>店舗基本情報編集</h1>
    <%= form_with model: @shop, url: admin_shop_shop_path(@shop), local: true do |form| %>
    <% if @shop.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@shop.errors.count, t('errors.count')) %> <%= t('errors.prohibited') %>:</h2>
        <ul>
          <% @shop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row mb-3">
      <div class="col-9">
        <%= form.label :shop_logo %>
        <%= form.file_field :shop_logo, class: "form-control" %>
      </div>
      <div class="col">
        <% if @shop.shop_logo %>
          <%= image_tag(@shop.shop_logo.to_s, class: "img-fluid") %>
        <% else %>
          お店ロゴが登録されていません。
        <% end %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-9">
        <%= form.label :image1 %>
        <%= form.file_field :image1, class: "form-control" %>
      </div>
      <div class="col">
        <% if @shop.image1.present? %>
          <%= image_tag(@shop.image1.to_s, class: "img-fluid") %>
          <label>
            <%= form.check_box :remove_image1 %>
            画像削除
          </label>
        <% else %>
          画像１が登録されていません。
        <% end %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-9">
        <%= form.label :image2 %>
        <%= form.file_field :image2, class: "form-control" %>
        <label>
          <%= form.check_box :remove_image2 %>
          画像削除
        </label>
      </div>
      <div class="col">
        <% if @shop.image2.present? %>
          <%= image_tag(@shop.image2.to_s, class: "img-fluid") %>
        <% else %>
          画像2が登録されていません。
        <% end %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-9">
        <%= form.label :image3 %>
        <%= form.file_field :image3, class: "form-control" %>
        <label>
          <%= form.check_box :remove_image3 %>
          画像削除
        </label>
      </div>
      <div class="col">
        <% if @shop.image3.present? %>
          <%= image_tag(@shop.image1.to_s, class: "img-fluid") %>
        <% else %>
          画像3が登録されていません。
        <% end %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-9">
        <%= form.label :image4 %>
        <%= form.file_field :image4, class: "form-control" %>
        <label>
          <%= form.check_box :remove_image4 %>
          画像削除
        </label>
      </div>
      <div class="col">
        <% if @shop.image4.present? %>
          <%= image_tag(@shop.image4.to_s, class: "img-fluid") %>
        <% else %>
          画像4が登録されていません。
        <% end %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-9">
        <%= form.label :image5 %>
        <%= form.file_field :image5, class: "form-control" %>
        <label>
          <%= form.check_box :remove_image5 %>
