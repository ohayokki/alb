
<%= form_with model: model, url: url, local: true, class: "form-horizontal" do |f| %>
  <%= render "layouts/error", model: model %>

  <div class="mb-3">
    <%= f.label :name, "名前", class: "form-label" %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :blood_type, "血液型", class: "form-label" %>
    <%= f.text_field :blood_type, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :birthday, "誕生日", class: "form-label" %>
    <%= f.date_select :birthday, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :height, "身長", class: "form-label" %>
    <%= f.number_field :height, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :alcohol, "アルコールの得意度", class: "form-label" %>
    <%= f.text_field :alcohol, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :message, "メッセージ", class: "form-label" %>
    <%= f.text_area :message, class: "form-control" %>
  </div>

  <div class="mb-3">
    <div class="row">
      <div class="col">
       <%= f.label :image, "画像", class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="col text-end">
        <% if model.image.present? %>
          <label class="mt-3">
            <%= f.check_box :remove_image %>
            画像削除
          </label>
          <%= image_tag(model.image.to_s, style: "width: 100px") %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :hobby, "趣味", class: "form-label" %>
    <%= f.text_field :hobby, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :role, "役職", class: "form-label" %>
    <%= f.text_field :role, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :service_style, "接客スタイル", class: "form-label" %>
    <%= f.text_field :service_style, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :qualifications, "資格・経験", class: "form-label" %>
    <%= f.text_field :qualifications, class: "form-control" %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>
