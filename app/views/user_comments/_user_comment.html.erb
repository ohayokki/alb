<div class="comment">
  <p class="comment-time"><%= user_comment.created_at.strftime('%Y-%m-%d %H:%M') %></p>
  <p class="comment-text"><%= user_comment.comment %></p>
  <p class="comment-author">- <%= user_comment.user.name %></p>
  <% if user_comment.user == current_user %>
    <p><%= link_to "削除する", user_comment_path(user_comment), data: {turbo_method: :delete, turbo_confirm: "本当に口コミを削除しますか？"} %></p>
  <% end %>
</div>
